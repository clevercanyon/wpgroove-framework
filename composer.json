{
	"license"           : "GPL-2.0-or-later",
	"name"              : "clevercanyon/wpgroove-framework",
	"description"       : "WP Grooveâ€™s framework for WordPress.",
	"authors"           : [
		{
			"name"     : "WP Groove",
			"homepage" : "https://wpgroove.com",
			"role"     : "organization"
		}
	],
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"platform"      : {
			"php-64bit" : "7.4.0"
		},
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true,
			"composer/package-versions-deprecated"           : true
		}
	},
	"require"           : {
		"clevercanyon/php-js-utilities" : "dev-main"
	},
	"autoload"          : {
		"psr-4" : {
			"WP_Groove\\Framework\\" : "./src/classes"
		}
	},
	"require-dev"       : {
		"clevercanyon/wpgroove-framework-dev" : "dev-main"
	},
	"autoload-dev"      : {
		"psr-4" : {
			"WP_Groove\\Framework__Tests\\" : "./tests/classes"
		}
	},
	"scripts"           : {
		"post-update-cmd"  : "[ $COMPOSER_DEV_MODE -eq 0 ] || ./dev/cli-tools/composer/on-post-update-cmd",
		"phpunit"          : "composer exec --profile -- phpunit --configuration ./.phpunit.xml --no-coverage",
		"phpunit-coverage" : "XDEBUG_MODE=coverage composer exec --profile -- phpunit --configuration ./.phpunit.xml",
		"webpack"          : "npx webpack --config ./.webpack.cjs"
	},
	"extra"             : {
		"clevercanyon" : {
			"$extends-packages" : [ "clevercanyon/php-js-utilities" ],
			"&"                 : {
				"project"                 : {
					"data" : {
						"version"    : "1.0.0",
						"stable_tag" : "1.0.0",
						"layout"     : "distro-lib",
						"name"       : "WP Groove: WordPress Framework"
					}
				},
				"brand"                   : {
					"data" : {
						"name" : "WP Groove",
						"slug" : "wpgroove"
					},
					"aws"  : {
						"s3" : {
							"bucket"     : "wpgroove",
							"cdn_domain" : "cdn.wpgroove.com"
						}
					}
				},
				"php_scoper"              : {
					"cfg" : {
						"exclude-constants" : [ ],
						"exclude-classes"   : [ ],
						"exclude-functions" : [ ]
					}
				},
				"post_update_cmd_handler" : {
					"symlink_local_packages" : {
						"$concat" : {
							"vendor" : [
								"clevercanyon/wpgroove-framework",
								"clevercanyon/wpgroove-framework-dev"
							]
						}
					}
				}
			}
		}
	}
}

{
	"license"           : "GPL-2.0-or-later",
	"name"              : "clevercanyon/wpgroove-framework",
	"description"       : "Intended for internal company use only. WP Groove's framework is for WordPress development.",
	"authors"           : [
		{
			"name"     : "WP Groove",
			"homepage" : "https://wpgroove.com",
			"role"     : "organization"
		}
	],
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true
		}
	},
	"require"           : {
		"clevercanyon/php-js-utilities" : "dev-main"
	},
	"autoload"          : {
		"psr-4" : {
			"WP_Groove\\Framework\\" : "./src/classes"
		}
	},
	"require-dev"       : {
		"clevercanyon/wpgroove-framework-dev" : "dev-main"
	},
	"autoload-dev"      : {
		"psr-4" : {
			"WP_Groove\\Framework__Tests\\" : "./tests/classes"
		}
	},
	"scripts"           : {
		"post-update-cmd"   : [
			"[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/clevercanyon/wpgroove-framework-dev/src/toolchain/composer/post-update-cmd.php"
		],
		"run-project-tests" : [
			"./vendor/bin/phpunit --configuration ./.phpunit.xml --testsuite tests"
		]
	},
	"extra"             : {
		"clevercanyon" : {
			"@extends-packages" : [ "clevercanyon/wpgroove-framework-dev" ]
		}
	}
}

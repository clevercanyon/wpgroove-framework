{
	"license"           : "GPL-2.0-or-later",
	"name"              : "clevercanyon/wpgroove-framework",
	"description"       : "WP Grooveâ€™s framework for WordPress.",
	"authors"           : [
		{
			"name"     : "WP Groove",
			"homepage" : "https://wpgroove.com",
			"role"     : "organization"
		}
	],
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"platform"      : {
			"php-64bit" : "7.4.0"
		},
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true,
			"composer/package-versions-deprecated"           : true
		}
	},
	"require"           : {
		"clevercanyon/utilities" : "dev-main"
	},
	"autoload"          : {
		"psr-4" : {
			"WP_Groove\\Framework\\" : [ "./src/classes" ]
		}
	},
	"require-dev"       : {
		"clevercanyon/wpgroove-framework-dev" : "dev-main"
	},
	"autoload-dev"      : {
		"psr-4" : {
			"WP_Groove\\Framework\\Tests\\" : [ "./tests/classes" ]
		}
	},
	"scripts"           : {
		"webpack"                  : "npx webpack --config ./dev/.libs/webpack/config.cjs",
		"wp-docker"                : "./vendor/clevercanyon/utilities/dev/cli-tools/docker/wp/docker",

		"phpunit"                  : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-coverage --no-logging",
		"phpunit~distro"           : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config~distro.xml --no-coverage --no-logging",
		"phpunit~coverage"         : "XDEBUG_MODE=coverage composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-logging",

		"phpunit~wp-docker"        : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-coverage --no-logging --do-not-cache-result",
		"phpunit~wp-docker~distro" : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config~distro.xml --no-coverage --no-logging --do-not-cache-result",

		"phpunit~ci"               : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-coverage",
		"phpunit~ci~distro"        : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config~distro.xml --no-coverage",

		"post-install-cmd"         : "[ $COMPOSER_DEV_MODE -eq 0 ] || ./dev/cli-tools/composer/on-post-install-cmd",
		"post-update-cmd"          : "[ $COMPOSER_DEV_MODE -eq 0 ] || ./dev/cli-tools/composer/on-post-update-cmd"
	},
	"extra"             : {
		"clevercanyon" : {
			"$extends-packages" : [ "clevercanyon/utilities" ],
			"&"                 : {
				"brand"                   : {
					"data" : {
						"n7m" : "w6e"
					},
					"aws"  : {
						"s3" : {
							"bucket"     : "wpgroove",
							"cdn_domain" : "cdn.wpgroove.com"
						}
					}
				},
				"project"                 : {
					"data" : {
						"version"        : "1.0.0",
						"stable_tag"     : "1.0.0",

						"layout"         : "distro-lib",
						"namespace_crux" : "WP_Groove\\Framework",
						"name"           : "WP Groove: WordPress Framework"
					}
				},
				"post_update_cmd_handler" : {
					"symlink_local_packages" : {
						"$concat" : {
							"vendor" : [
								"clevercanyon/wpgroove-framework",
								"clevercanyon/wpgroove-framework-dev"
							]
						}
					}
				}
			}
		}
	}
}
